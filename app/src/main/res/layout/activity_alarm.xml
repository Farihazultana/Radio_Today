<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AlarmActivity">

    <ImageView
        android:id="@+id/ivAlarmLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="Turn on the Start Stream alarm to start the radio stream automatically at the selected time. The Stop Stream setting sill stop the radio stream at the selceted time. All alarms set will be activated daily."
        app:layout_constraintBottom_toTopOf="@+id/viewTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAlarmLogo"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/viewTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/horizontal_line"
        app:layout_constraintBottom_toTopOf="@+id/layoutStartStreaming"
        app:layout_constraintEnd_toEndOf="@+id/layoutStartStreaming"
        app:layout_constraintStart_toStartOf="@+id/layoutStartStreaming"
        app:layout_constraintTop_toBottomOf="@+id/ivAlarmLogo"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutStartStreaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/viewDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop">

        <TextView
            android:id="@+id/tvStartStreaminHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Stream At : "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/layoutStart_NumberPicker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStartStreaminHeading"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvSelectedStartStreamingHour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_bg"
                android:backgroundTint="@color/navyBlue"
                android:text="00"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:backgroundTint="@color/navyBlue"
                android:src="@drawable/ic_colon"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvSelectedStartStreamingMinute"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_bg"
                android:backgroundTint="@color/navyBlue"
                android:text="00"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvSelectedStartStreamingAmPM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_bg"
                android:backgroundTint="@color/navyBlue"
                android:text="AM"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switchStartStreaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewDown"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/horizontal_line"
        app:layout_constraintBottom_toTopOf="@+id/layoutStopStreaming"
        app:layout_constraintEnd_toEndOf="@+id/layoutStartStreaming"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/layoutStartStreaming"
        app:layout_constraintTop_toBottomOf="@+id/layoutStartStreaming" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutStopStreaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layoutStartStreaming"
        app:layout_constraintStart_toStartOf="@+id/layoutStartStreaming"
        app:layout_constraintTop_toBottomOf="@+id/viewDown">

        <TextView
            android:id="@+id/tvStopStreamingHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Stop Stream At : "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/layout_StopNumberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStopStreamingHeading"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvSelectedStopStreamingHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_bg"
                android:backgroundTint="@color/navyBlue"
                android:text="00"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvStopStreamingHeading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvStopStreamingHeading"
                app:layout_constraintTop_toTopOf="@+id/tvStopStreamingHeading" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:backgroundTint="@color/navyBlue"
                android:src="@drawable/ic_colon"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvSelectedStopStreamingMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_bg"
                android:backgroundTint="@color/navyBlue"
                android:text="00"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvStopStreamingHeading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvStopStreamingHeading"
                app:layout_constraintTop_toTopOf="@+id/tvStopStreamingHeading" />

            <TextView
                android:id="@+id/tvSelectedStopStreamingAmPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_bg"
                android:backgroundTint="@color/navyBlue"
                android:text="AM"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvStopStreamingHeading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvStopStreamingHeading"
                app:layout_constraintTop_toTopOf="@+id/tvStopStreamingHeading" />

            <Switch
                android:id="@+id/switchStopStreaming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>